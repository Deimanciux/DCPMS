{% extends '@!EasyAdmin/page/content.html.twig' %}

{% block content_title %}Clinic Services{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            {% for service in services %}
            <div class="col-lg-3 col-md-4 col-6 p-0">
                <div class="card bg-light text-dark">
                    <div class="card">
                        <a href="/single-page">
                            <img src="{{ asset(service.serviceImages[0].getImageUrl) }}" class="card-img-top">
                            <div class="card-body">
                                <p class="card-text text-black">
                                    {{ service.title }}
                                </p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
