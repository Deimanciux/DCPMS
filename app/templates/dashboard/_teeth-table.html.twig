<div class="container ps-0">
    <div class="row">
        <div class="col-md-6">
            <table class="table table-bordered" id="tooth-table">
                <tbody>
                    <tr>
                        {% for position in positions %}
                                {% if position.position < 30%}
                                    <td class = "tooth-data" data-position-number="{{ position.position }}">{{ position.position }}</td>
                                {% endif %}
                        {% endfor %}
                    </tr>
                    <tr>
                        {% for position in positions %}
                            {% if position.position < 31%}
                                <td class = "tooth-data" data-position-number="{{ position.position }}">
                                    <img style="max-width: 100%; max-height: 30px;" class="img-responsive" src="/images/teeth/regular/{{position.position}}.png" alt="">
                                </td>
                            {% endif %}
                        {% endfor %}
                    </tr>
                    <tr>
                        {% for position in positions %}
                            {% if position.position > 30%}
                                <td class = "tooth-data" data-position-number="{{ position.position }}">
                                    <img style="max-width: 100%; max-height: 30px;" class="img-responsive" src="/images/teeth/regular/{{position.position}}.png" alt="">
                                </td>
                            {% endif %}
                        {% endfor %}
                    </tr>
                    <tr>
                        {% for position in positions %}
                            {% if position.position > 30%}
                                <td class = "tooth-data" data-position-number="{{ position.position }}">{{ position.position }}</td>
                            {% endif %}
                        {% endfor %}
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
